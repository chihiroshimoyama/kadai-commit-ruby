<% if logged_in? %>
<h1>タスク一覧</h1>


<% if @tasks.any? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>id</th>
        <th style="width: 100px">登録者id</th>
        <th>登録者</th>
        <th>タスク</th>
        <th>スターテス</th>
      </tr>

    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td style="width: 100px"><%= @task.user.id %></td>
          <td><%= link_to @task.user.name, user_path(@task.user) %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>  
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>


<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>

<% else %>

<% end %>
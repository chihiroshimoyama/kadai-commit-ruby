<h1>ユーザー一覧</h1>

<% if @users.any? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>id</th>
        <th>氏名</th>
        <th>email</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @users %>
  </div>
<% end %>